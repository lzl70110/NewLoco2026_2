@model List<NewLoco.Web.ViewModels.Locomotives.LocomotiveNumberViewModel>

<h2 class="mb-3">Locomotive Numbers</h2>

@if (Model == null || !Model.Any())
    {
    <p class="text-muted">No locomotives available.</p>
    }
else
    {
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th></th>
                    <th>Number</th>
                    <th>Type</th>
                    <th>Unit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var loco in Model.Where(l => !l.IsDeleted))
                    {
                    <tr>
                        <td style="width:40px;">
                                @{
                                // Determine image based on the locomotive series
                                string imgSrc = loco.Number.StartsWith("06") ? "/images/locomotives/06.png" :
                                loco.Number.StartsWith("52") ? "/images/locomotives/52.png" :
                                loco.Number.StartsWith("55") ? "/images/locomotives/55.png" :
                                "/images/locomotives/default.png";
                                }
                            <img src="@imgSrc" alt="Loco" class="img-fluid" style="max-height:30px;">
                        </td>
                        <td>@loco.Number</td>
                        <td>@loco.LocomotiveType</td>
                        <td>@loco.MeasuringUnit</td>
                    </tr>
                    }
            </tbody>
        </table>
    </div>
    }

<footer class="mt-4 text-center text-muted">
    &copy; 2026 - Locomotive Management
</footer>
