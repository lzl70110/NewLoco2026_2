@model IReadOnlyList<NewLoco.Web.ViewModels.Locomotives.LocomotiveNumberViewModel>

@{
    var currentFilter = (ViewData["CurrentFilter"] as string) ?? "active";
    ViewData["Title"] = "Locomotives";
    }

<h2 class="mb-3">Locomotives</h2>

<div class="mb-3 d-flex align-items-center gap-3">

    <!-- Filter form (GET) -->
    <form asp-action="Index" method="get" class="d-flex align-items-center gap-2">
        <label for="filter" class="form-label mb-0">Filter:</label>

        <select id="filter"
                name="filter"
                class="form-select form-select-sm w-auto"
                onchange="this.form.submit()">

            <option value="active" selected="@(currentFilter == "active")">Active</option>
            <option value="deleted" selected="@(currentFilter == "deleted")">Deleted</option>
            <option value="all" selected="@(currentFilter == "all")">All</option>
        </select>

        <noscript>
            <button type="submit" class="btn btn-sm btn-secondary">Apply</button>
        </noscript>
    </form>

    <!-- Create -->
    <a asp-action="Create" class="btn btn-sm btn-primary">
        Add New Locomotive
    </a>

</div>

@if (Model == null || !Model.Any())
    {
    <div class="alert alert-info" role="alert">
        No locomotives found for the current filter.
    </div>
    }
else
    {
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Number</th>
                   
                    <th style="width:320px;">Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var loco in Model)
                    {
                    <tr class="@(loco.IsDeleted ? "table-secondary" : null)">
                        <td>@loco.Number</td>
                       
                     

                        <td>
                            <div class="d-flex flex-wrap gap-md-0 align-content-end">

                                <!-- Details -->
                                <a asp-action="Details"
                                   asp-route-id="@loco.Id"
                                   class="btn btn-sm btn-info">
                                    Details
                                </a>

                                <!-- Edit -->
                                <a asp-action="Edit"
                                   asp-route-id="@loco.Id"
                                   class="btn btn-sm btn-warning">
                                    Edit
                                </a>

                                @if (!loco.IsDeleted)
                                    {
                                    <!-- DELETE -->
                                    <form asp-action="Delete"
                                          asp-route-id="@loco.Id"
                                          method="post"
                                          class="d-inline">
                                        @Html.AntiForgeryToken()

                                        <button type="submit"
                                                class="btn btn-sm btn-danger"
                                                onclick="return confirm('Are you sure you want to delete this locomotive?');">
                                            Delete
                                        </button>
                                    </form>
                                    }
                                else
                                    {
                                    <!-- UNDELETE -->
                                    <form asp-action="Undelete"
                                          asp-route-id="@loco.Id"
                                          method="post"
                                          class="d-inline">
                                        @Html.AntiForgeryToken()

                                        <button type="submit"
                                                class="btn btn-sm btn-success"
                                                onclick="return confirm('Restore this locomotive?');">
                                            Undelete
                                        </button>
                                    </form>
                                    }

                            </div>
                        </td>
                    </tr>
                    }
            </tbody>

        </table>
    </div>
    }
